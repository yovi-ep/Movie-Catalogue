<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/colorTextViewSecondary</item>
        <item name="actionMenuTextColor">@color/colorTextViewSecondary</item>
        <item name="android:textColorSecondary">@color/colorTextViewSecondary</item>
    </style>

    <style name="TabLayoutTheme" parent="Base.Widget.Design.TabLayout">
        <item name="tabRippleColor">@color/divider</item>
        <item name="tabTextAppearance">@style/TextTabLayout</item>
    </style>

    <style name="TextTabLayout" parent="TextView.MediumBold">
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- THEME -->


    <!-- COMPONENT -->
    <style name="TextView" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextViewSecondary</item>
        <item name="android:gravity">left</item>
    </style>

    <!--___________ TEXT SIZE ___________-->
    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Big" parent="TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.ExtraBig" parent="TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.MultiExtraBig" parent="TextView">
        <item name="android:textSize">46sp</item>
    </style>

    <!--___________ TEXT BOLD ___________-->

    <style name="TextView.SmallBold" parent="TextView.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.MediumBold" parent="TextView.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.BigBold" parent="TextView.Big">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.ExtraBigBold" parent="TextView.ExtraBig">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
