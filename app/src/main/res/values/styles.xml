<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/colorTextViewSecondary</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/colorTextViewSecondary</item>
        <item name="actionMenuTextColor">@color/colorTextViewSecondary</item>
        <item name="android:textColorSecondary">@color/colorTextViewSecondary</item>
    </style>

    <style name="TabLayoutTheme" parent="Base.Widget.Design.TabLayout">
        <item name="tabRippleColor">@color/divider</item>
        <item name="tabTextAppearance">@style/TextTabLayout</item>
    </style>

    <style name="TextTabLayout" parent="TextView.MediumBold">
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- THEME -->


    <!-- COMPONENT -->
    <style name="CardViewTheme" parent="Base.CardView">
        <item name="cardMaxElevation">@dimen/card_elevation_medium</item>
        <item name="cardElevation">@dimen/card_elevation_medium</item>
        <item name="cardCornerRadius">@dimen/card_radius_medium</item>

        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
    </style>

    <style name="TextView" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorTextViewSecondary</item>
        <item name="android:gravity">left</item>
    </style>

    <!--___________ TEXT SIZE ___________-->

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Big" parent="TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.ExtraBig" parent="TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <!--___________ TEXT BOLD ___________-->

    <style name="TextView.MediumBold" parent="TextView.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.ExtraBigBold" parent="TextView.ExtraBig">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
